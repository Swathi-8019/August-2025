class Solution:
    def searchBST(self, root: Optional[TreeNode], val: int) -> Optional[TreeNode]:
        if not root:
            return None
        
        if root.val == val:
            return root
        elif root.val < val:
            current = self.searchBST(root.right, val)
        else:
            current = self.searchBST(root.left, val)
        return current
